<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cn.cornflower.com.huan.ui.activity.CommitApplicationActivity"
    tools:showIn="@layout/activity_commit_application">
  <include layout="@layout/toolbar_"/>
    <include
        layout="@layout/phone_address"/>
    <RelativeLayout
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_80">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <cn.cornflower.com.huan.view.ClearEditText
        android:id="@+id/et_amount"
        android:inputType="number"
        android:hint="@string/amount"
        android:maxLength="5"
        android:textSize="@dimen/size_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"
        android:drawableRight="@drawable/abc_ic_clear_mtrl_alpha"/>
    </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_alignBottom="@+id/tl"
            android:background="@drawable/ic_send_black_24dp"
            android:id="@+id/send"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
